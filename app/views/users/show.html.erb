<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class="container" style="width: 1000px;">
  <div class="row d-flex justify-content-center">
    <div class="user-show-photo col", style="background-color: gray; border-radius: 50%;">
      <%= cl_image_tag @user.photo.attached? ? @user.photo.key : "https://lh3.googleusercontent.com/a/ACg8ocIVADxXTymJNIDRswlN4rz-pcJz13cUMNcXPXMjMSGSAqU--q5y=s360-c-no", class: "", alt: "user-avatar", style: "" %>
    </div>
    <div class="col">
      <h2>@<%= @user.username %></h2>
    </div>




    <div class="row">
      <% @user.costumes.all.each do |costume| %>
        <%= costume.title %>
      <% end %>
    </div>
  </div>
</div>
